
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>Sample UCDArch Application</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Le styles -->
    @Styles.Render("~/Content/styles")
    
    <!-- Fav and touch icons -->
    <link rel="shortcut icon" href="~/favicon.ico">

    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    @Html.Partial("_Navigation")

    <div class="jumbotron">
        <div class="container">
        @RenderSection("subhead", required: false)
        </div>
    </div>

    <div class="container">
        <header>
            @Html.Partial("_ServiceMessages")

            @if (!string.IsNullOrWhiteSpace(ViewBag.ErrorMessage))
            {
                <div class="alert alert-error">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @ViewBag.ErrorMessage
                </div>
            }
            
            @if (!string.IsNullOrWhiteSpace(TempData["Message"] as string))
            {
                <div class="alert alert-info">
                    <button type="button" class="close" data-dismiss="alert">×</button>
                    @TempData["Message"]
                </div>
            }
        </header>
        
        <ul class="nav nav-pills pull-right">
            @RenderSection("SubNav", required: false)
        </ul>
        
        <div class="container">
            @RenderBody()
        </div>


        <hr>
        <footer>
            <p>&copy; College of Agricultural and Environmental Sciences, University of California at Davis</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("AdditionalScripts", required: false)
    
    <script>
        $(function () {
            //Choose the active link depending on your current controller
            var controller = '@ViewContext.RouteData.Values["controller"].ToString().ToLower()';
            $("#nav-" + controller).addClass("active");
        })
    </script>
</body>
</html>
